<html>

<head>
	<title>hApp</title>

	<link rel="stylesheet" href="/scripts/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/scripts/bootstrap-material-design/dist/css/bootstrap-material-design.css">
	<link rel="stylesheet" href="/static/css/main.css">
	<link rel="stylesheet" href="/static/css/button-theme.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body class="bg-light">
	{{!-- Begin here (or replace this with any static code already written). --}}


	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="navbar-header">
			<a class="navbar-brand center" href="#"><h3>hApp</h3></a>
			<a href="/timeSelect" class="left" href="#">
				<button type="button" class="btn btn-lg btn-header">
					<img src="/static/icons/back-arrow.svg" height="30"/>
				</button></a>
			<a class="right" href="#">
				<button type="button" class="btn btn-lg btn-header info">
					<img src="/static/icons/info.svg" height="30"/>
				</button></a>
		</div>
	</nav>

	<div class="container" style="height:calc(77.5vh - 0.5pt); text-align:center; padding: 1%">
		<h3>How are you Feeling?</h3>
		<span class="overflow" style="display:none;">Scroll through and tell us</span>
		<div class="feeling" style="width:100%; height:90%; overflow-y:auto; background:#e6e6e6; padding:1%">
			{{#each tags}}
				<div class="tag-tile" style="background-image: url('{{url}}')"><a href="/eventSearch/0"> <button class="btn tags" style="">{{name}}</button></a></div>
			{{/each}}
		</div>
	</div>
	<div class="outer" style="text-align: center;">
		OR<br>
		<a href="/eventSearch/0" style="margin: auto"> <div class="btn btn-lg btn-primary active btn-login">SURPRISE ME</div></a>
	</div>

	<script src="/scripts/jquery/dist/jquery.js"></script>
	<script src="/scripts/bootstrap/dist/js/bootstrap.js"></script>
	<script src="/scripts/popper.js/dist/umd/popper.js"></script>
	<script src="/scripts/bootstrap-material-design/dist/js/bootstrap-material-design.js"></script>
	<script src="/static/js/main.js"></script>
	<script src="/static/js/loadInfo.js"></script>
	<script>
		function scrollLayout(){
			if($(".feeling").prop('scrollHeight')>$(".feeling").prop('clientHeight')){
				console.log("scroll");
				$(".overflow").css("display","block");
				$(".feeling").css("height","85%");
			}
			else{
				$(".overflow").css("display","none");
				$(".feeling").css("height","90%");
			
			}
		}
		$(document).ready(function(){
			scrollLayout();
		})
		$(window).resize(function(){
			scrollLayout();
		})
	</script>
</body>

</html>