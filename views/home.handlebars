<html>

<head>
	<title>hApp</title>

	<link rel="stylesheet" href="/scripts/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/scripts/bootstrap-material-design/dist/css/bootstrap-material-design.css">
	<link rel="stylesheet" href="/static/css/main.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body class="bg-light home-page">
	{{!-- Begin here (or replace this with any static code already written). --}}


	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="navbar-header">
			<a class="navbar-brand center" href="#"><h3>hApp</h3></a>
			<a href="/recentHistory" class="left" href="#">
				<button type="button" class="btn btn-lg btn-header">
					<img src="/static/icons/history.svg" height="30"/>
				</button></a>
			<a class="right" href="/wip">
				<button type="button" class="btn btn-lg btn-header">
					<img src="/static/icons/settings-work-tool.svg" height="30"/>
				</button></a>
		</div>
	</nav>

	<div class="container" style="text-align:center; padding-top: calc(40vh - 100px); padding-bottom: calc(50vh - 100px)">
		<div class="home-body">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
				<a href="/timeSelect"><button type="button" class="btn btn-lg btn-primary active btn-home">Search</button></a>
			</div>
		</div>
		<div class="row" style="padding-top:50px;">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
				<a href="/eventCreation"><button type="button" class="btn btn-lg btn-secondary active btn-home">Upload</button></a>
			</div>
		</div>
		</div>
	</div>

	

	<script src="/scripts/jquery/dist/jquery.js"></script>
	<script src="/scripts/bootstrap/dist/js/bootstrap.js"></script>
	<script src="/scripts/popper.js/dist/umd/popper.js"></script>
	<script src="/scripts/bootstrap-material-design/dist/js/bootstrap-material-design.js"></script>
	<script src="/static/js/main.js"></script>

	<script>
		$(document).ready(function(){
			var bg = new Array();
			{{#each backgrounds}}
			var str = "url('{{this}}')";
			bg.push(str);
			{{/each}}
			var header = $('body');
			//get current value locally from the redirect
			var current = 0;

			function nextBackground() {
    			current++;
    			current = current % bg.length;
    			header.css('transition','background-image 1s');
    			header.css('transition-time-function','ease-in-out');
    			header.css('background-image', bg[current]);
    			$('.home-page').css('background-image', bg[current]);
			}
			setInterval(nextBackground, 15000);

			header.css('background-image', bg[0]);
			});
	</script>
</body>

</html>