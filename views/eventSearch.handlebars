<html>

<head>
	<title>hApp</title>

	<link rel="stylesheet" href="/scripts/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/scripts/bootstrap-material-design/dist/css/bootstrap-material-design.css">
	<link rel="stylesheet" href="/static/css/main.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body class="bg-light">
	{{!-- Begin here (or replace this with any static code already written). --}}


	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="navbar-header">
			<a class="navbar-brand center" href="#"><h3>hApp</h3></a>
			<a href="/home" class="left" href="#">
				<button type="button" class="btn btn-lg btn-header">
					<img src="/static/icons/home.svg" height="30"/>
				</button></a>
			<a class="right" href="/feelingSelect">
				<button type="button" class="btn btn-lg btn-header">
					<img src="/static/icons/controls.svg" height="30"/>
				</button></a>
		</div>
	</nav>
	
	<div class="container" style="height:calc(77% - 0.5pt); padding-top: 2.5%;">
		<div class="card" style="text-align:center; margin-top:0; margin-left:0; margin-right:0; height: 100%;">
			<img class="card-img-top crop img-responsive" src={{imageURL}} style="height:70%;">
			<div class="card-body text-left">
				<h6 class="card-text" style="margin-bottom: 0;">{{name}}</h6>
				<span class="card-text" style="font-weight:bolder;">{{distance}}</span>
				<p class="card-text" style="margin-top:0.5em;">{{description}}</p>
			</div>
		</div>
	</div>

	<div class="outer" id="outer">
		<a><button class="btn inner rewind"><i class="fa fa-arrow-left"></i></button></a>
		&nbsp;&nbsp;&nbsp;&nbsp;
		<a><button class="btn inner btn-circle btn-xl uninterested"><i class="fa fa-close"></i></button></a>
		&nbsp;&nbsp;&nbsp;&nbsp;
		<a href="/map"><button class="btn inner btn-circle btn-xl"><i class="fa fa-heart" style="color:#000"></i></button></a>
		&nbsp;&nbsp;&nbsp;&nbsp;
		<a href="/spider"><div class="inner"><button type="button" class="btn btn-secondary"><img src="/static/icons/ellipsis.svg" height="20"/></button></div></a>
	</div>

	

	<script src="/scripts/jquery/dist/jquery.js"></script>
	<script src="/scripts/bootstrap/dist/js/bootstrap.js"></script>
	<script src="/scripts/popper.js/dist/umd/popper.js"></script>
	<script src="/scripts/bootstrap-material-design/dist/js/bootstrap-material-design.js"></script>
	<script src="/static/js/main.js"></script>
</body>

</html>